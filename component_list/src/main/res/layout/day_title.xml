<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/day_title_height">

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_day"
            android:text="周五"
            android:gravity="left"
            android:textColor="@color/title_day"
            android:textSize="@dimen/title_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/title_date"
            android:text="2019-4-30"
            android:textColor="@color/title_day"
            android:textSize="@dimen/title_day"
            android:layout_marginLeft="@dimen/title_day_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
</RelativeLayout>