<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_wrap"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/item_remark_marginLeft">

    <View
        android:visibility="gone"
        android:id="@+id/item_decoration"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/item_decoration"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_decoration"/>

    <TextView
        android:id="@+id/title"
        android:text="备注"
        android:textSize="@dimen/item_remark_textsize"
        android:textColor="@color/title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/item_remark_marginLeft"
        android:layout_marginTop="@dimen/item_remark_marginTop"
        app:layout_constraintTop_toBottomOf="@id/item_decoration"
        style="@style/wrap_wh" />

    <EditText
        android:inputType="textMultiLine"
        android:textSize="@dimen/item_remark_textsize"
        android:textColor="@color/title"
        android:id="@+id/remark"
        android:background="@color/remark"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/item_remark_marginLeft"
        android:layout_marginTop="@dimen/item_remark_marginTop"
        android:layout_marginRight="@dimen/item_remark_marginLeft"
        android:layout_width="0dp"
        android:layout_height="@dimen/remark_height" />
</androidx.constraintlayout.widget.ConstraintLayout>