<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mine_item_height"
    android:background="?attr/selectableItemBackground"
    app:layout_srlBackgroundColor="@color/white"
    >
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/mine_itemIcon_left_width"
        android:layout_height="@dimen/mine_itemIcon_left_height"
        android:layout_marginStart="@dimen/mine_itemIcon_left_marginStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:src="@mipmap/my_file" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mine_itemText_marginStart"
        android:text="TextView"
        android:textSize="@dimen/mine_itemText_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="@dimen/mine_itemIcon_right_width"
        android:layout_height="@dimen/mine_itemIcon_right_height"
        android:layout_marginEnd="@dimen/mine_item_right_marginEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/my_icon_arrow_item"
         />


</androidx.constraintlayout.widget.ConstraintLayout>